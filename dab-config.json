{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v1.7.83/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('DAB_CONNECTION_STRING')",
    "options": {
      "set-session-context": false
    }
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/api",
      "request-body-strict": true
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true
    },
    "mcp": {
      "enabled": true,
      "path": "/mcp"
    },
    "host": {
      "cors": {
        "origins": [],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "development"
    }
  },
  "entities": {
    "Application": {
      "description": "Label applications with brand, alcohol content, net contents, government warning, bottler info",
      "source": {
        "object": "dbo.applications",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "Application",
          "plural": "Applications"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ]
    },
    "LabelImage": {
      "description": "Uploaded label image metadata and blob URLs",
      "source": {
        "object": "dbo.label_images",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "LabelImage",
          "plural": "LabelImages"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ]
    },
    "OcrResult": {
      "description": "OCR processing results with extracted fields and confidence scores",
      "source": {
        "object": "dbo.ocr_results",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "OcrResult",
          "plural": "OcrResults"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ]
    },
    "Comparison": {
      "description": "Field-by-field comparison results between label and application data",
      "source": {
        "object": "dbo.comparisons",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "Comparison",
          "plural": "Comparisons"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ]
    },
    "Review": {
      "description": "Agent review decisions and verdicts",
      "source": {
        "object": "dbo.reviews",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "Review",
          "plural": "Reviews"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ]
    },
    "AuditEvent": {
      "description": "Audit log of agent actions and system events",
      "source": {
        "object": "dbo.audit_events",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "AuditEvent",
          "plural": "AuditEvents"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ]
    }
  }
}